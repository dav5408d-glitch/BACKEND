generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String   @map("password_hash")
  name         String?
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  subscription  Subscription?
  conversations Conversation[]
  usage         Usage[]

  @@map("users")
}

model Subscription {
  id                 String    @id @default(uuid())
  userId             String    @unique @map("user_id")
  planType           String    @map("plan_type")
  status             String
  lemonSqueezyId     String?   @map("lemon_squeezy_id")
  currentPeriodStart DateTime? @map("current_period_start")
  currentPeriodEnd   DateTime? @map("current_period_end")
  createdAt          DateTime  @default(now()) @map("created_at")
  updatedAt          DateTime  @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("subscriptions")
}

model Conversation {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  title     String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages Message[]

  @@map("conversations")
}

model Message {
  id             String   @id @default(uuid())
  conversationId String   @map("conversation_id")
  role           String
  content        String   @db.Text
  aiUsed         String?  @map("ai_used")
  tokensUsed     Int?     @map("tokens_used")
  costUSD        Float?   @map("cost_usd")
  hasImage       Boolean  @default(false) @map("has_image")
  imageUrl       String?  @map("image_url")
  createdAt      DateTime @default(now()) @map("created_at")

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@map("messages")
}

model Usage {
  id           String   @id @default(uuid())
  userId       String   @map("user_id")
  date         DateTime
  totalTokens  Int      @default(0) @map("total_tokens")
  totalCostUSD Float    @default(0) @map("total_cost_usd")
  requests     Int      @default(0)
  aiBreakdown  Json?    @map("ai_breakdown")
  createdAt    DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@map("usage")
}
